---
const { frontmatter } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
      <link rel="preconnect" href="https://fonts.googleapis.com">
      <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
      <link href="https://fonts.googleapis.com/css2?family=Kanit:wght@500&family=Montserrat:wght@400;700&family=Roboto&display=swap" rel="stylesheet">
      <title>{frontmatter.title}</title>
	</head>
	<body>
      <header>
         <a href="/">Jack Saenz</a> 
      </header>
      <div class="center-container">
      <div class="container">
         <h1 class="main-head">{frontmatter.mhead}</h1>
         <p class="subtitle">{frontmatter.subtitle}</p>
		   <slot />
      </div>
      </div>
	</body>
</html>
<style is:global >
	html {
		background-color: #F2F2F2;
      margin: 0;
      color: #404040;
   }

   body {
      margin: 0;
   }

   header {
      padding-right: 1rem;
      padding-left: 1rem;
      display: flex;
      margin-bottom: 1rem;
   }

   a {
      font-family: 'Montserrat', sans-serif;
      font-weight: 700;
      font-size: 2rem;
      margin: 0;
      margin-top: .5rem;
      margin-bottom: .5rem;
      text-decoration: none;
      color: #65ad51;
   }

   p {
      font-family: 'Roboto', sans-serif;
      margin: 0;
   }

   h1 {
      font-family: 'Kanit', sans-serif;
      font-weight: 500;
      margin: 0;
      margin-bottom: 1rem;
      margin-top: 1rem;
   }

   .container {
      display: flex;
      flex-direction: column;
      max-width: 60rem;
      margin-left: 1rem;
      margin-right: 1rem;
   }

   .center-container {
      display: flex;
      justify-content: center;
   }

   .main-head {
      font-size: 3rem;
      margin: 0;
      margin-bottom: 1rem;
      line-height: 3.5rem;
   }

   .subtitle {
      font-style: italic;
      font-size: 1rem;
      margin-bottom: 2rem;
      margin-left: 1rem;
   } 
</style>
